	<body>
		<img class="background" src="../assets/pomodoro-images/fogforest.jpg" />
		<div class="wrapper">
			<!-- Pomodoro time -->
			<nav class="primary-nav">
				<!-- If a user is a returning user, render "Welcome back, <username>" -->
				<% if (returningUser) { %>
					<h2 class="user-welcome">Welcome back, <%= user.userName %>!</h2>
				<% } else { %>
					<h2 class="user-welcome">Welcome, <%= user.userName %>!</h2>
				<% } %>
				<a href="/logout" class="logout__btn">Logout</a>
			</nav>
			<div class="container">
				<header class="header__container">
					<h1 class="pomodoro__title">Timeato</h1>
					<section class="pomodoro__timer">
						<span class="pomodoro__cta">Choose a time:</span>
						<select
							name="membership"
							id="timeSelect"
							class="timeSelect"
						>
							<option value="5">5</option>
							<option value="10">10</option>
							<option value="25" selected="selected">25</option>
							<option value="30">30</option>
						</select>
						<h2 class="timerDisplay">
							<span class="pomodoro__digits minutes">00</span
							>:<span class="pomodoro__digits seconds">00</span>
						</h2>
						<button class="timerStartStop timerStartStopStopped">Start/Stop</button>
					</section>
				</header>
				<section class="inner__container">
					<h3 class="pomodoro__cta">
						What would you like to work on?
					</h3>
					<ul class="pomodoro__list">
						<li class="pomodoro__list-item">Study</li>
						<li class="pomodoro__list-item">Banki</li>
						<li class="pomodoro__list-item">Coding</li>
						<li class="pomodoro__list-item">Job Search</li>
					</ul>
				</section>
			</div>
