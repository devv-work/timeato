        <div class="wrapper">
            <!-- Pomodoro time -->
            <nav class="primary-nav">
                <button>Logout</button>
            </nav>
            <div class="container">
                <h1 class="pomodoro__title">Pomodoro</h1>
                <section class="pomodoro__timer">
                  <span class="pomodoro__cta">Choose a time:</span>
                  <select name="membership" id="timeSelect" class="timeSelect">
                      <option value="5">5</option>
                      <option value="10">10</option>
                      <option value="25" selected>25</option>
                      <option value="30">30</option>
                  </select>
                  <h2 class="timerDisplay">Minutes Left: 00</h2>
                  <button class="timerStartStop">Start/Stop</button>
                </section>
                <section class="inner__container">
                    <span class="pomodoro__cta">Choose a time:</span>
                    <ul class="pomodoro__list">
                        <li class="pomodoro__list-item">25 mins</li>
                        <li class="pomodoro__list-item">5 mins</li>
                    </ul>
                </section>

                <section class="inner__container">
                    <span class="pomodoro__cta">Tag your time:</span>
                    <ul class="pomodoro__list">
                        <li class="pomodoro__list-item">Work</li>
                        <li class="pomodoro__list-item">Study</li>
                    </ul>
                </section>
                <button class="pomodoro__start-button">Start/Stop</button>
                <p class="pomodoro__description">
                    See how you've been spending your time below
                </p>
            </div>
        

